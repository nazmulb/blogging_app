{% extends 'admin/layout.html.twig' %}

{% block title %}Admin - Posts{% endblock %}

{% block content %}
    <div class="d-flex flex-row-reverse">
        <a class="btn btn-primary text-white mb-2" href="{{ path('admin_post_new') }}">Create new</a>
    </div>
    <table class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Published at</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.title }}</td>
                <td>{{ post.publishedAt ? post.publishedAt|date('F jS \\a\\t g:ia') : '' }}</td>
                <td class="text-center">
                    <a href="{{ path('admin_post_edit', {'id': post.id}) }}">Edit</a> | 
                    {{ include('admin/blog/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" align="center">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
